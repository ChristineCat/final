		function loadTwitter(query, toUlQuery) {
			var url = 'http://search.twitter.com/search.json?q=' + query;
			console.log('Loading twitter: ' + url);
			
			$.ajax({
				url: url,
				success: function(data) {
					console.log(data);
				}
			});
		}
	</script>
	
